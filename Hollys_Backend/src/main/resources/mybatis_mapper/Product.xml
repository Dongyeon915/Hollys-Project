<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.naver.ehd9567.hollys_backend.dao.ProductDAO">

  <select id="getAllProducts" resultType="com.naver.ehd9567.hollys_backend.dto.ProductDTO">
    SELECT * FROM product
  </select>

  <select id="getProductById" resultType="com.naver.ehd9567.hollys_backend.dto.ProductDTO"
    parameterType="int">
    SELECT * FROM product where id = #{id}
  </select>

  <select id="getProductByName" resultType="com.naver.ehd9567.hollys_backend.dto.ProductDTO"
    parameterType="string">
    SELECT * FROM product where name = #{name}
  </select>

  <select id="setProduct" parameterType="com.naver.ehd9567.hollys_backend.dto.ProductDTO"
    resultType="int">
    INSERT INTO product
    values(#{id},#{name},#{name_eng},#{info},#{price},#{image_url},#{category_fk});
  </select>
</mapper>