<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.naver.ehd9567.hollys_backend.dao.CategoryDAO">

  <select id="getAllCategory" resultType="com.naver.ehd9567.hollys_backend.dto.CategoryDTO">
    SELECT * FROM category
  </select>

  <select id="getById" parameterType="int" resultType="com.naver.ehd9567.hollys_backend.dto.CategoryDTO">
    SELECT * FROM category where category_id = #{id}
  </select>

  <select id="getByMenu_fk" resultType="com.naver.ehd9567.hollys_backend.dto.CategoryDTO" parameterType="Integer">
    SELECT * FROM category where menu_fk = #{menu_fk}
  </select>


</mapper>