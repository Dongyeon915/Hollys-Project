<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.naver.ehd9567.hollys_backend.dao.MenuDAO">
  <select id="getAllMenu" resultType="com.naver.ehd9567.hollys_backend.dto.MenuDTO">
    SELECT * FROM menu;
  </select>

  <select id="getMenuById" resultType="com.naver.ehd9567.hollys_backend.dto.MenuDTO"
    parameterType="Integer">
    SELECT * FROM menu where menu_id = #{id}
  </select>

  <select id="getMenuByName" resultType="com.naver.ehd9567.hollys_backend.dto.MenuDTO"
    parameterType="String">
    SELECT * FROM menu where name = #{name}
  </select>

  <insert id="setMenu" parameterType="com.naver.ehd9567.hollys_backend.dto.MenuDTO">
    INSERT INTO menu values(#{menu_id},#{name})
  </insert>

  <update id="updateMenu" parameterType="com.naver.ehd9567.hollys_backend.dto.MenuDTO">
    UPDATE menu SET name = #{name} where menu_id = #{menu_id};
  </update>

  <delete id="deleteMenu" parameterType="com.naver.ehd9567.hollys_backend.dto.MenuDTO">
    DELETE FROM menu where menu_id = #{menu_id}
  </delete>

</mapper>